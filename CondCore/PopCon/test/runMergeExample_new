#run popcon example1
#  put your firstsince value after xxx 
mkdir testPopCon
pushd testPopCon

cp $LOCALRT/src/CondCore/PopCon/test/PopConExample1_template.cfg PopConExample1_template.cfg


cat PopConExample1_template.cfg | sed 's/xxx/3/g' > tmp_PopConExample.cfg
sed -i 's/yyy/3/g' tmp_PopConExample.cfg

echo "populate pop_test.db with xxx, xxx+10, xxx+20" | sed 's/xxx/3/g' 
cmsRun tmp_PopConExample.cfg
rm tmp_PopConExample.cfg

cat PopConExample1_template.cfg | sed 's/xxx/25/g' > tmp_PopConExample.cfg
sed -i 's/pop_test.db/pop_test1.db/g' tmp_PopConExample.cfg
sed -i 's/yyy/1/g' tmp_PopConExample.cfg      

echo "populate pop_test1.db with 25"  
cmsRun tmp_PopConExample.cfg

rm tmp_PopConExample.cfg

cat PopConExample1_template.cfg | sed 's/xxx/41/g' > tmp_PopConExample.cfg
sed -i 's/pop_test.db/pop_test2.db/g' tmp_PopConExample.cfg
sed -i 's/yyy/1/g' tmp_PopConExample.cfg
echo "populate pop_test2.db with 42"
cmsRun tmp_PopConExample.cfg
rm tmp_PopConExample.cfg

cat PopConExample1_template.cfg | sed 's/xxx/7/g' > tmp_PopConExample.cfg
sed -i 's/Example_tag/Example_tag2/g' tmp_PopConExample.cfg
sed -i 's/pop_test.db/pop_test3.db/g' tmp_PopConExample.cfg
sed -i 's/yyy/10/g' tmp_PopConExample.cfg
echo "populate pop_test3.db with 7 + other 10"
cmsRun tmp_PopConExample.cfg
rm tmp_PopConExample.cfg


echo "inspect db"
cmscond_list_iov -c sqlite_file:pop_test.db
cmscond_list_iov -c sqlite_file:pop_test1.db
cmscond_list_iov -c sqlite_file:pop_test2.db

echo "get iov details"
cmscond_list_iov -c sqlite_file:pop_test.db -t Example_tag
cmscond_list_iov -c sqlite_file:pop_test1.db -t Example_tag
cmscond_list_iov -c sqlite_file:pop_test2.db -t Example_tag
cmscond_list_iov -c sqlite_file:pop_test3.db -t Example_tag2


echo "import"
cmscond_export_iov -s sqlite_file:pop_test1.db -t Example_tag -d sqlite_file:pop_test.db  -l sqlite_file:log.db
cmscond_export_iov -s sqlite_file:pop_test2.db -t Example_tag -d sqlite_file:pop_test.db  -l sqlite_file:log.db
cmscond_export_iov -s sqlite_file:pop_test3.db -i Example_tag2 -b 64 -e 89 -t Example_tag -d sqlite_file:pop_test.db -l sqlite_file:log.db

cmscond_list_iov -c sqlite_file:pop_test.db -t Example_tag



#note: tag-name, log-name and db-name must be the same as in the cfg file  

echo "dump log"
cmscond_logdb_dump -c sqlite_file:log.db  > test_log1.log


# removing the EXECTIME information from the log
cat test_log1.log | sed 's/EXECTIME (string) : 2008-[0-9]-[0-9][0-9]-[0-9][0-9]:[0-9][0-9]:[0-9][0-9]//g' | sed 's/EXECTIME (string) : 2008-[0-9]-[0-9][0-9]-[0-9][0-9]:[0-9][0-9]:[0-9]//g'| sed 's/EXECTIME (string) : 2008-[0-9]-[0-9][0-9]-[0-9][0-9]:[0-9]:[0-9][0-9]//g' > test_log2.log

mv test_log2.log test_log1.log
cat test_log1.log


popd

