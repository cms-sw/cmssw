		<Constant name="CylinderInR" value="415.5*mm"/>
		<Constant name="MFRingInR" value="382.75*mm"/>
		<Constant name="MFRingOutR" value="71.5*mm+[MFRingInR]"/>
	</ConstantsSection>
	<Algorithm name="track:DDTIBLayerAlgo">
		<rParent name="tiblayer2:TIBLayer2"/>
