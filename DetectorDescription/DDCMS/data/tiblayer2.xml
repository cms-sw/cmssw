		<!-- NB String numbering here starts from 1 -->
		<Vector name="DOHMListFW" type="numeric" nEntries="6">
			3, -6, 10, -13, 18, -21
		</Vector>
		<Vector name="DOHMListBW" type="numeric" nEntries="6">
			3, -6, 10, -13, 18, -21
		</Vector>
