#!/bin/bash

function RunOne()
{
	local tag="$1"
	local de_x_N="$2"
	local de_x_F="$3"
	local de_y_N="$4"
	local de_y_F="$5"

	local cfgFile="${tag}_cfg.py"
	local logFile="${tag}.log"
	local aligFile="${tag}.xml"

	cat "alignment_template.xml" | sed "\
			s|\$de_x_N|$de_x_N|; \
			s|\$de_x_F|$de_x_F|; \
			s|\$de_y_N|$de_y_N|; \
			s|\$de_y_F|$de_y_F|; \
		" > "$dir/$aligFile"

	cp "template_cfg.py" "$dir/$cfgFile"

	(
		echo "process.maxEvents.input = $events"

		echo "process.ctppsIncludeAlignmentsFromXML.MisalignedFiles += cms.vstring(\"Validation/CTPPS/test/year_2016/proton_reconstruction_MC/misalignment/$dir/$aligFile\")"
		echo "process.ctppsProtonReconstructionSimulationValidator.outputFile = \"${tag}_validation.root\""
	) >> "$dir/$cfgFile"

	cd "$dir"

	cmsRun "$cfgFile" &> "$logFile" &

	cd - &> /dev/null
}


#----------------------------------------------------------------------------------------------------

function Run()
{
	events="$1"
	dir="$2"

	rm -rf "$dir"
	mkdir "$dir"

	RunOne "none" "0" "0" "0" "0"
	RunOne "x_sym" "+150" "+150" "0" "0"
	RunOne "x_asym" "-10" "+10" "0" "0"
	RunOne "y_sym" "0" "0" "+100" "+100"
	RunOne "y_asym" "0" "0" "-10" "+10"
}

#----------------------------------------------------------------------------------------------------

#Run "100" "1E2"

Run "10000" "1E4"
