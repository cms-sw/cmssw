#!/usr/bin/env perl

use strict "vars";
use vars qw( %opts );
use vars qw( %config );

use Getopt::Long;

Getopt::Long::config('bundling_override');
%opts = ();
GetOptions( \%opts,
                "run|r=s",
                "file|f=s",
                "help|h"
);
usage() if ( $opts{'help'} || $Getopt::Long::error );

my $runnum = $opts{'run'};
my $filnam = $opts{'file'};

usage() if ( ! $runnum && ! $filnam );

use File::Basename;

unshift(@INC, dirname($0));
require "ec_mon_utils.pl";

ec_mon_conf_file();

my %filelists;
my @datatypes;
my ($loc, $num, $lun, $out, $fun, $fil, $ful);

if ($filnam) {
    my $name = basename($filnam, ".dat");

    ($loc, $num, $lun, $out, $fun, $fil, $ful) = split('\.', $name);

    if ( -e "$filnam" && ($out eq 'A' || $out eq 'Calibration') ) {
	@{$filelists{$out}} = ($filnam);
	push(@datatypes, $out);
    } else {
	print "file: $filnam does not exist or is not compatible\n";
	exit 1;
    }
}
else {

    ($loc, $num, $lun, $out, $fun, $fil, $ful) = split('\.', $runnum);

    my $daqdir = "$config{'ec_mon_master_rundir'}/daq-data";
    my $trashdir = "$config{'ec_mon_master_rundir'}/daq-data/trash";

    my @checktypes = qw(A Calibration);
    if ( $config{'ec_mon_path'} =~ /localDAQ/ ) {
	@checktypes = qw(A);
    }

    foreach my $datatype (@checktypes) {
	@{$filelists{$datatype}} = map {"$daqdir/" . $_} split('\n', ec_mon_filelist("$daqdir/", $num, $datatype, 1));

	if (@{$filelists{$datatype}} == 0){
	    @{$filelists{$datatype}} = map {"$trashdir/" . $_} split('\n', ec_mon_filelist("$trashdir/", $num, $datatype, 1));
	}

	if (@{$filelists{$datatype}} != 0) {
	    push(@datatypes, $datatype);
	}
    }
}

exit 1 unless ( @datatypes != 0 );

if ($config{'ec_mon_era'} eq '') {
    open LOGFILE, ">>$config{'ec_mon_master_rundir'}/dqm-data/$config{'ec_mon_master_log'}";
    print LOGFILE localtime()." - ec_mon_cmssw_task_wrapper: no era defined; cannot set workflow.\n";
    close LOGFILE;    
    exit 1;
}

my $workdir = "$config{'ec_mon_master_rundir'}/dqm-data/tmp";
my $tooldir = "/nfshome0/ecalpro/DQM/tools";

my $wbmrun = $num;
$wbmrun =~ s/^0*//;
my $wbmcommand = 'wget -t 10 --timeout=10 -O ' . "$workdir/wbm$num" . ' "http://cmswbm2.cms/cmsdb/servlet/RunParameters?RUN=' . $wbmrun . '" 2>/dev/null; ' . "$tooldir/getWbmParam.pl" . ' "dqm_run_key_at_configure" "cosmic_run|pp_run|hi_run|hpu_run" ' . "$workdir/wbm$num";
my $runkey = `$wbmcommand`;

my $cmsenv;
my $daq;
my $workflow;

if ($runkey eq 'cosmic_run') {
    $workflow = '/Cosmics/';
}
elsif ($runkey eq 'pp_run' || $runkey eq 'hpu_run') {
    $workflow = '/Protons/';
}
elsif ($runkey eq 'hi_run' ) {
    $workflow = '/HeavyIons/';
}
else {
    $workflow = '/All/';
}

$workflow .= "$config{'ec_mon_era'}/";

if ( $filelists{$datatypes[0]}[0] =~ /Minidaq/ ) {
    $cmsenv = "$config{'ec_mon_swconf_dir'}/cmsenv.miniDAQ";
    $daq = 'globalDAQ';
    $workflow .= "MiniDAQ";
}
elsif ( $config{'ec_mon_path'} =~ /localDAQ/ ) {
    $cmsenv = "$config{'ec_mon_swconf_dir'}/cmsenv.localDAQ";
    $daq = 'localDAQ';
    $workflow .= "LocalDAQ";
}
elsif ( $config{'ec_mon_path'} =~ /globalDAQ/ ) {
    $cmsenv = "$config{'ec_mon_swconf_dir'}/cmsenv.globalDAQ";
    $daq = 'globalDAQ';
    $workflow .= "CentralDAQ";
}
else {
    exit 1;
}

foreach my $datatype (@datatypes) {

    my $cfgtype;

    if ( $config{'ec_mon_path'} =~ /localDAQ/ || $datatype eq 'Calibration' ) {
	$cfgtype = 'Calibration';
    }
    else {
	$cfgtype = 'Physics';
    }

    my $firstfile = basename($filelists{$datatype}[0], ".dat");
    ($loc, $num, $lun, $out, $fun, $fil, $ful) = split('\.', $firstfile);

    my $cfgfile = "$workdir/monitor-$loc.$num.$datatype.py";

    if ( -e $cfgfile ) {
	system("rm -f $cfgfile >> /dev/null 2>&1");
    }

    my $sourcelist = join(' ', @{$filelists{$datatype}});

    my $task = "source $cmsenv; python $tooldir/ecalOldConfigBuilder.py -e PrivOffline -c $cfgtype -d $daq -w '$workflow' -f $cfgfile -s '$sourcelist' -g " . '"$globaltag"' . "; cd $workdir; time cmsRun $cfgfile runkey=$runkey";

    my $logdir = "$config{'ec_mon_master_rundir'}/dqm-data/logs";
    my $logfile = "$logdir/$loc.$num.$datatype.cmssw.log";

    if ( -e $logfile ) {
	system("rm -f $logfile >> /dev/null 2>&1");
    }

    if(system("($task) > $logfile 2>&1") != 0 || system("mv -f $cfgfile $logdir/ >> /dev/null 2>&1") != 0) {
	exit 1;
    }
}

my $outputname = "DQM_V0001_R0$num$workflow.root";
$outputname =~ s/\//__/g;

system("mv -f $workdir/$outputname $workdir/closed/$outputname >> /dev/null 2>&1");
system("rm -f $workdir/wbm$num");

exit 0;

############################################################################

sub usage {
  print STDERR <<INLINE_LITERAL_TEXT;
usage: ec_mon_cmssw_task_wrapper [ --run <run_number> | --file /pathname/filename ]
INLINE_LITERAL_TEXT

  exit;
}
