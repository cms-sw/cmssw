<?xml version="1.0"?>
<DDDefinition xmlns="http://www.cern.ch/cms/DDL" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.cern.ch/cms/DDL ../../../DetectorDescription/Schema/DDLSchema.xsd">
	<ConstantsSection label="hps240.xml" eval="true">
		<Constant name="Rmin" value="0*fm"/>
		<Constant name="HfpZ" value="20.0*m"/>
		<Constant name="HfpR" value="1.0*m"/>
		<Constant name="ZMainShift" value="240.0*m"/>
	</ConstantsSection>
	<SolidSection label="hps240.xml">
		<Tubs name="HPS240E" rMin="[Rmin]" rMax="[HfpR]" dz="[HfpZ]" startPhi="0*deg" deltaPhi="360*deg"/>
	</SolidSection>
	<LogicalPartSection label="hps240.xml">
		<LogicalPart name="HPS240E" category="unspecified">
			<rSolid name="HPS240E"/>
			<rMaterial name="materialsfp420:Vacuum"/>
		</LogicalPart>
	</LogicalPartSection>
</DDDefinition>
