<?xml version="1.0"?>
<DDDefinition xmlns="http://www.cern.ch/cms/DDL" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.cern.ch/cms/DDL ../../DetectorDescription/Schema/DDLSchema.xsd">


<ConstantsSection  label="tbrot.xml" eval="true" >

<Constant name="eta"        value="2.06"/>
<Constant name="theta"      value="2*atan(exp(-[tbrot:eta]))"/>

<Constant name="phi"        value="0.46"/>

<Constant name="theta_X"    value="[tbrot:theta] + 90*deg"/>
<Constant name="phi_X"      value="[tbrot:phi]"/>

<Constant name="theta_Y"    value="                90*deg"/>
<Constant name="phi_Y"      value="[tbrot:phi]   + 90*deg"/>

<Constant name="xtran"      value="0.0*cm"/>
<Constant name="ytran"      value="0.0*cm"/>
<Constant name="ztran"      value="0.0*cm"/>

</ConstantsSection>

</DDDefinition>

