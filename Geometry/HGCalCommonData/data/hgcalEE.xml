<?xml version="1.0"?>
<DDDefinition xmlns="http://www.cern.ch/cms/DDL" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.cern.ch/cms/DDL ../../../DetectorDescription/Schema/DDLSchema.xsd">

<ConstantsSection label="hgcalEE.xml" eval="true">
  <Constant name="EE_nSegments1" value="10"/>
  <Constant name="EE_nSegments2" value="10"/>
  <Constant name="EE_nSegments3" value="10"/>
  <Constant name="ThetaMin" value="0.0994838*rad"/>
  <Constant name="ThetaMax1" value="0.448061*rad"/>
  <Constant name="demiPhi" value="0.174533*rad"/>
  <Constant name="dZ_EE_absorber1" value="1.6*mm"/>
  <Constant name="dZ_EE_absorber2" value="3.3*mm"/>
  <Constant name="dZ_EE_absorber3" value="5.6*mm"/>
  <Constant name="dZ_EE_detector" value="5.2*mm"/>
  <Constant name="dZ_EE_heatshield" value="3*mm"/>
  <Constant name="dZ_EE_wafer" value="0.2*mm"/>
  <Constant name="dZ_EE_pcb" value="1*mm"/>
  <Constant name="dZ_EE_airgap" value="1*mm"/>
  <Constant name="ZminEE" value="3187.6*mm"/>
  <Constant name="ZmaxEE" value="3448.6*mm"/>
 <Vector name="EEabsorber1" type="numeric" nEntries="2"> 1, 10 </Vector>
 <Vector name="EEshield1" type="numeric" nEntries="2"> 11, 20 </Vector>
 <Vector name="EEsilicon1" type="numeric" nEntries="2"> 21, 30 </Vector>
 <Vector name="EEpcb1" type="numeric" nEntries="2"> 31, 40 </Vector>
 <Vector name="EEairgap1" type="numeric" nEntries="2"> 41, 50 </Vector>
 <Vector name="EEabsorber2" type="numeric" nEntries="2"> 51, 60 </Vector>
 <Vector name="EEshield2" type="numeric" nEntries="2"> 61, 70 </Vector>
 <Vector name="EEsilicon2" type="numeric" nEntries="2"> 71, 80 </Vector>
 <Vector name="EEpcb2" type="numeric" nEntries="2"> 81, 90 </Vector>
 <Vector name="EEairgap2" type="numeric" nEntries="2"> 91, 100 </Vector>
 <Vector name="EEabsorber3" type="numeric" nEntries="2"> 101, 110 </Vector>
 <Vector name="EEshield3" type="numeric" nEntries="2"> 111, 120 </Vector>
 <Vector name="EEsilicon3" type="numeric" nEntries="2"> 121, 130 </Vector>
 <Vector name="EEpcb3" type="numeric" nEntries="2"> 131, 140 </Vector>
 <Vector name="EEairgap3" type="numeric" nEntries="2"> 141, 150 </Vector>
</ConstantsSection> 

<SolidSection label="hgcalEE.xml">
 <Polyhedra name="HGCalEEM" numSide="1" startPhi="350*deg" deltaPhi="20*deg">
  <ZSection z="[hgcal:zHGCal1]" rMin="[hgcal:rMinHGCal1]" rMax="[hgcal:rMapHGCal1]"/>
  <ZSection z="[hgcal:zHGCal2]" rMin="[hgcal:rMinHGCal2]" rMax="[hgcal:rMapHGCal2]"/>
 </Polyhedra>
</SolidSection> 

<LogicalPartSection label="hgcalEE.xml">
 <LogicalPart name="HGCalEEM" category="unspecified"> 
  <rSolid name="HGCalEEM"/> 
  <rMaterial name="materials:Air"/> 
 </LogicalPart>
</LogicalPartSection> 

<PosPartSection label="hgcalEE.xml">
 <Algorithm name="global:DDAngular">
  <rParent name="hgcal:HGCalEE"/>
  <String name="ChildName" value="HGCalEEM"/>
  <Numeric name="StartCopyNo" value="1"/>
  <Numeric name="IncrCopyNo" value="1"/>
  <Numeric name="N" value="18"/>
  <Numeric name="StartAngle" value="0*deg"/>
  <Numeric name="RangeAngle" value="360*deg"/>
  <Numeric name="Radius" value="0*m"/>
  <Vector name="RotateSolid" type="numeric" nEntries="3">0*deg, 0*deg, 0*deg </Vector>
 </Algorithm>
 <Algorithm name="hgcal:DDHGCalEEAlgo">
  <rParent name="hgcalEE:HGCalEEM"/>
  <Vector name="MaterialNames" type="string" nEntries="5">
   materials:Lead, materials:Copper, materials:Silicon, 
   materials:M_NEMA FR4 plate, materials:Air</Vector>
  <Vector name="VolumeNames" type="string" nEntries="5">
   EEAbsorber, EEHeatShield, EESensitive, EEPCB, EEAirGap</Vector>
  <String name="Rotation" value="rotations:YXZ4"/>
  <Vector name="Layers" type="numeric" nEntries="3">10, 10, 10</Vector>
  <Vector name="ThicknessType1" type="numeric" nEntries="3">
   1.6*mm, 3.3*mm, 5.6*mm</Vector>
  <Vector name="ThicknessType2" type="numeric" nEntries="3">
   3.0*mm, 3.0*mm, 3.0*mm</Vector>
  <Vector name="ThicknessType3" type="numeric" nEntries="3">
   0.2*mm, 0.2*mm, 0.2*mm</Vector>
  <Vector name="ThicknessType4" type="numeric" nEntries="3">
   1.0*mm, 1.0*mm, 1.0*mm</Vector>
  <Vector name="ThicknessType5" type="numeric" nEntries="3">
   1.0*mm, 1.0*mm, 1.0*mm</Vector>
  <Vector name="zMinBlock" type="numeric" nEntries="3">
   3170.0*mm, 3238.0*mm, 3323.0*mm</Vector>
  <Numeric name="SlopeBottom" value="[etaMax:slope]"/>
  <Numeric name="SlopeTop"    value="[hgcal:slope2]"/>
  <Numeric name="Sectors"     value="18"/>
  <Numeric name="ZFront"      value="[hgcal:zHGCal1]"/>
  <Numeric name="RMaxFront"   value="[hgcal:rMaxHGCal1]"/>
 </Algorithm>
</PosPartSection> 

</DDDefinition>
