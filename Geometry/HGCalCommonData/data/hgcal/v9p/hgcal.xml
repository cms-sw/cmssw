  <Constant name="SensorSeparation"      value="1.00*mm"/>
  <Constant name="MouseBite"             value="5.00*mm"/>
  <Constant name="CellThicknessFine"     value="0.12*mm"/>
  <Constant name="CellThicknessCoarse1"  value="0.20*mm"/>
