  </LogicalPart>
  <LogicalPart name="HGCalEEPCB" category="unspecified">
    <rSolid name="HGCalPCB"/>
    <rMaterial name="materials:G10"/>
  </LogicalPart>
  <LogicalPart name="HGCalHEPCB" category="unspecified">
    <rSolid name="HGCalPCB"/>
