</SpecPar>

<SpecPar name="mtdNumbering">
  <PartSelector path="//btl:BarrelTimingLayer"/>
  <Parameter name="OnlyForMTDRecNumbering" value="MTD" eval="false"/>
  <Parameter name="TopologyMode" value="MTDTopologyMode::barphiflat" eval="false"/>
</SpecPar>


</SpecParSection>
</DDDefinition>

