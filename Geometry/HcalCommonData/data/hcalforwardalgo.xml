<?xml version="1.0"?>
<DDDefinition xmlns="http://www.cern.ch/cms/DDL" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.cern.ch/cms/DDL ../../../DetectorDescription/Schema/DDLSchema.xsd">

<ConstantsSection label="hcalforwardalgo.xml" eval="true">
 <Constant name="shiftSF"     value="11.0*cm"/>
 <Constant name="dzHF"        value="82.5*cm"/>
 <Constant name="dzHFx"       value="([dzHF]+0.005*cm)"/>
 <Constant name="dzVCal"      value="([cms:ForwdVcalZ2]-[cms:ForwdVcalZ1])/2"/>
 <Constant name="halfAngHF"   value="10*deg"/>
 <Constant name="rMinHF"      value="12.5*cm"/>
 <Constant name="rMaxHF"      value="1.570*m"/>
 <Constant name="dxLowHF"     value="([rMinHF]*tan([halfAngHF]))"/>
 <Constant name="dxTopHF"     value="([rMaxHF]*tan([halfAngHF]))"/>
 <Constant name="dyHF"        value="([rMaxHF]-[rMinHF])/2"/>
 <Constant name="yposHF"      value="([rMaxHF]+[rMinHF])/2"/>
 <Constant name="zposVCal"    value="([cms:ForwdVcalZ2]+[cms:ForwdVcalZ1])/2"/>
 <Constant name="zposModule"  value="11.955*m" />
 <Constant name="boxDx"       value="0.50*cm" />
 <Constant name="boxDy"       value="0.25*cm" />
 <Constant name="startY"      value="(-[dyHF]+1.25*cm)" />
 <Constant name="holeDx"      value="0.50*mm" />
 <Constant name="holeX"       value="0.25*cm" />
 <Constant name="claddingR"   value="0.45*mm" />
 <Constant name="fibreR"      value="0.30*mm" />
 <Constant name="fibreLongL"  value="164.90*cm" />
 <Constant name="fibreShortL" value="([fibreLongL]-2*[shiftSF])" />
 <Constant name="fibreLongZ"  value="[fibreLongL]/2-[dzHF]" />
 <Constant name="fibreShortZ" value="[fibreShortL]/2-[dzHF]" />
</ConstantsSection>

<SolidSection label="hcalforwardalgo.xml">
 <Tubs name="VCAL" rMin="[cms:ForwdBeamR1]" rMax="[cms:ForwdVcalR1]" 
       dz="[dzVCal]" startPhi="0*deg" deltaPhi="360*deg" />
 <Tubs name="HVQF" rMin="[cms:ForwdBeamR1]" rMax="[cms:ForwdVcalR1]"
       dz="[dzHFx]"  startPhi="0*deg" deltaPhi="360*deg"/>
 <Trapezoid name="HVQX" dz="[dzHF]"     alp1="0*deg"    bl1="[dxLowHF]"
                        tl1="[dxTopHF]" h1="[dyHF]"     alp2="0*deg"
                        bl2="[dxLowHF]" tl2="[dxTopHF]" h2="[dyHF]"
                        phi="0*deg"     theta="0*deg" />
 <Box name="HFBox"      dx="[boxDx]"    dy="[boxDy]"    dz="[dzHF]"/>
 <Box name="HFHoleS"    dx="[holeDx]"   dy="[holeDx]"   dz="[dzHF]"/>
 <Box name="HFHoleL"    dx="[holeDx]"   dy="[holeDx]"   dz="[dzHF]"/>
 <Tubs name="HFCladS"   rMin="0*fm"     rMax="[claddingR]"
       dz="[fibreShortL]/2" startPhi="0*deg" deltaPhi="360*deg"/>
 <Tubs name="HFCladL"   rMin="0*fm"     rMax="[claddingR]"
       dz="[fibreLongL]/2"  startPhi="0*deg" deltaPhi="360*deg"/>
 <Tubs name="HFFibreS"  rMin="0*fm"     rMax="[fibreR]"
       dz="[fibreShortL]/2" startPhi="0*deg" deltaPhi="360*deg"/>
 <Tubs name="HFFibreL"  rMin="0*fm"     rMax="[fibreR]"
       dz="[fibreLongL]/2"  startPhi="0*deg" deltaPhi="360*deg"/>
</SolidSection>

<LogicalPartSection label="hcalforwardalgo.xml">
 <LogicalPart name="VCAL" category="unspecified">
  <rSolid name="VCAL"/>
  <rMaterial name="materials:Air"/>
 </LogicalPart>
 <LogicalPart name="HVQF" category="unspecified">
  <rSolid name="HVQF"/>
  <rMaterial name="materials:Air"/>
 </LogicalPart>
 <LogicalPart name="HVQX" category="unspecified">
  <rSolid name="HVQX"/>
  <rMaterial name="materials:Iron"/>
 </LogicalPart>
 <LogicalPart name="HFBox1" category="unspecified">
  <rSolid name="HFBox"/>
  <rMaterial name="materials:Iron"/>
 </LogicalPart>
 <LogicalPart name="HFBox2" category="unspecified">
  <rSolid name="HFBox"/>
  <rMaterial name="materials:Iron"/>
 </LogicalPart>
 <LogicalPart name="HFHoleS" category="unspecified">
  <rSolid name="HFHoleS"/>
  <rMaterial name="materials:Air"/>
 </LogicalPart>
 <LogicalPart name="HFHoleL" category="unspecified">
  <rSolid name="HFHoleL"/>
  <rMaterial name="materials:Air"/>
 </LogicalPart>
 <LogicalPart name="HFCladS" category="unspecified">
  <rSolid name="HFCladS"/>
  <rMaterial name="hcalforwardmaterial:Plastic"/>
 </LogicalPart>
 <LogicalPart name="HFCladL" category="unspecified">
  <rSolid name="HFCladL"/>
  <rMaterial name="hcalforwardmaterial:Plastic"/>
 </LogicalPart>
 <LogicalPart name="HFFibreS" category="unspecified">
  <rSolid name="HFFibreS"/>
  <rMaterial name="hcalforwardmaterial:Quartz"/>
 </LogicalPart>
 <LogicalPart name="HFFibreL" category="unspecified">
  <rSolid name="HFFibreL"/>
  <rMaterial name="hcalforwardmaterial:Quartz"/>
 </LogicalPart>
</LogicalPartSection>

<PosPartSection label="hcalforwardalgo.xml">
 <PosPart copyNumber="5001">
   <rParent name="cms:CMSE"/>
   <rChild name="hcalforwardalgo:VCAL"/>
  <rRotation name="rotations:000D"/>
  <Translation x="0*fm" y="0*fm" z="[zposVCal]" />
 </PosPart>
 <PosPart copyNumber="5002">
   <rParent name="cms:CMSE"/>
   <rChild name="hcalforwardalgo:VCAL"/>
  <rRotation name="rotations:180D"/>
  <Translation x="0*fm" y="0*fm" z="-[zposVCal]"/>
 </PosPart>
 <PosPart copyNumber="1">
   <rParent name="hcalforwardalgo:VCAL"/>
   <rChild name="hcalforwardalgo:HVQF"/>
  <Translation x="0*fm" y="0*fm" z="[zposModule]-[zposVCal]" />
 </PosPart>
 <PosPart copyNumber="1">
   <rParent name="hcalforwardalgo:HFCladL"/>
   <rChild name="hcalforwardalgo:HFFibreL"/>
 </PosPart>
 <PosPart copyNumber="2">
   <rParent name="hcalforwardalgo:HFCladS"/>
   <rChild name="hcalforwardalgo:HFFibreS"/>
 </PosPart>
 <PosPart copyNumber="5001">
   <rParent name="hcalforwardalgo:HFHoleL"/>
   <rChild name="hcalforwardalgo:HFCladL"/>
  <Translation x="0*fm" y="0*fm" z="[fibreLongZ]" />
 </PosPart>
 <PosPart copyNumber="5002">
   <rParent name="hcalforwardalgo:HFHoleS"/>
   <rChild name="hcalforwardalgo:HFCladS"/>
  <Translation x="0*fm" y="0*fm" z="[fibreShortZ]" />
 </PosPart>
 <PosPart copyNumber="1">
   <rParent name="hcalforwardalgo:HFBox1"/>
   <rChild name="hcalforwardalgo:HFHoleS"/>
  <Translation x="-[holeX]" y="0*fm" z="0*fm" />
 </PosPart>
 <PosPart copyNumber="1">
   <rParent name="hcalforwardalgo:HFBox1"/>
   <rChild name="hcalforwardalgo:HFHoleL"/>
  <Translation x="[holeX]" y="0*fm" z="0*fm" />
 </PosPart>
 <PosPart copyNumber="1">
   <rParent name="hcalforwardalgo:HFBox2"/>
   <rChild name="hcalforwardalgo:HFHoleL"/>
  <Translation x="-[holeX]" y="0*fm" z="0*fm" />
 </PosPart>
 <PosPart copyNumber="1">
   <rParent name="hcalforwardalgo:HFBox2"/>
   <rChild name="hcalforwardalgo:HFHoleS"/>
  <Translation x="[holeX]" y="0*fm" z="0*fm" />
 </PosPart>
</PosPartSection>

<Algorithm name="hcal:DDHCalAngular">
   <rParent name="hcalforwardalgo:HVQF"/>
   <String  name="ChildName"    value="HVQX"/>
   <String  name="RotNameSpace" value="hcalrotations"/>
   <Numeric name="n"            value="18" />
   <Numeric name="startCopyNo"  value="1" />
   <Numeric name="incrCopyNo"   value="1" />
   <Numeric name="rangeAngle"   value="360*deg"/>
   <Numeric name="startAngle"   value="-90*deg"/>
   <Numeric name="shiftY"       value="[yposHF]"/>
   <Numeric name="shiftX"       value="0*fm"/>
   <Numeric name="zoffset"      value="0*fm"/>
</Algorithm>

