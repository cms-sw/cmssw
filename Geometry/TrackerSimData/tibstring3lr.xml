<?xml version="1.0"?>
<DDDefinition xmlns="http://www.cern.ch/cms/DDL" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.cern.ch/cms/DDL ../../DDLSchema/DDLSchema.xsd">

<ConstantsSection label="tibstring3lr.xml" eval="true">
 <Constant name="zero"         value="0.0*fm"/>
 <Constant name="MotherCableL" value="57.20*cm"/>
 <Constant name="CoolL"        value="72.70*cm"/>
 <Constant name="Det0Z"        value="4.55895*cm"/>
 <Constant name="Det1Z"        value="25.95265*cm"/>
 <Constant name="Det2Z"        value="47.31925*cm"/>
 <Constant name="ICC0Z"        value="15.250*cm"/>
 <Constant name="ICC1Z"        value="36.630*cm"/>
 <Constant name="ICC2Z"        value="61.680*cm"/>
 <Constant name="Shift"        value="-[tibstring3c:StringLoMinL]/2"/>
</ConstantsSection>

<SolidSection label="tibstring3lr.xml">
 <Box name="TIBString3LoPls1"            dx="[tibmodpar:ModuleDx]"    
      dy="[tibmodpar:ModuleDy]"          dz="[tibstring3c:StringLoPlsL]/2"/>
 <Box name="TIBString3LoPls2"            dx="[tibstringpar:CoolTubeW]/2"    
      dy="[tibstringpar:CoolTubeD]/2"    dz="[tibstring3c:StringLoPlsL]/2"/>
 <Box name="TIBString3LoPlsCable"        dx="[tibstringpar:MotherCableW]/2"    
      dy="[tibstringpar:MotherCableT]/2" dz="[MotherCableL]/2"/>
 <Tubs name="TIBString3LoPlsCoolS"       rMin="[zero]"      
       rMax="[tibstringpar:CoolTubeD]/2" dz="[CoolL]/2"
       startPhi="0*deg"                  deltaPhi="360*deg"/>
 <Tubs name="TIBString3LoPlsCoolW"       rMin="[zero]"      
       rMax="[tibstringpar:CoolTubeD]/2" dz="[tibstringpar:CoolTubeW]/2"
       startPhi="0*deg"                  deltaPhi="360*deg"/>
 </SolidSection>

<LogicalPartSection label="tibstring3lr.xml">
 <LogicalPart name="TIBString3LoPls1" category="unspecified">
  <rSolid name="TIBString3LoPls1"/>
  <rMaterial name="materials:Air"/>
 </LogicalPart>
 <LogicalPart name="TIBString3LoPls2" category="unspecified">
  <rSolid name="TIBString3LoPls2"/>
  <rMaterial name="materials:Air"/>
 </LogicalPart>
 <LogicalPart name="TIBString3LoPlsCable" category="unspecified">
  <rSolid name="TIBString3LoPlsCable"/>
  <rMaterial name="tibmaterial:TIB_mother_cable"/>
 </LogicalPart>
 <LogicalPart name="TIBString3LoPlsCoolS" category="unspecified">
  <rSolid name="TIBString3LoPlsCoolS"/>
  <rMaterial name="tibmaterial:TIB_mod_cool"/>
 </LogicalPart>
 <LogicalPart name="TIBString3LoPlsCoolW" category="unspecified">
  <rSolid name="TIBString3LoPlsCoolW"/>
  <rMaterial name="tibmaterial:TIB_mod_cool"/>
 </LogicalPart>
</LogicalPartSection>

<PosPartSection label="tibstring3lr.xml">
 <PosPart copyNumber="1">
   <rParent name="tibstring3lr:TIBString3LoPls1"/>
   <rChild name="tibstringpar:TIBCCUM"/>
  <Translation x="[zero]"   y="[zero]"  z="([tibstringpar:CCUMZ]+[Shift])" />
 </PosPart>
 <PosPart copyNumber="1">
   <rParent name="tibstring3lr:TIBString3LoPls2"/>
   <rChild name="tibstring3lr:TIBString3LoPlsCable"/>
  <Translation x="[zero]"   y="-[tibstringpar:MotherCableY]"  
               z="([tibstring3c:StringLoPlsL]-[MotherCableL])/2" />
 </PosPart>
 <PosPart copyNumber="1">
   <rParent name="tibstring3lr:TIBString3LoPls2"/>
   <rChild name="tibstring3lr:TIBString3LoPlsCoolS"/>
  <Translation x="-[tibstringpar:CoolTubeSep]/2"   y="[zero]"  
               z="([tibstring3c:StringLoPlsL]-[CoolL])/2" />
 </PosPart>
 <PosPart copyNumber="2">
   <rParent name="tibstring3lr:TIBString3LoPls2"/>
   <rChild name="tibstring3lr:TIBString3LoPlsCoolS"/>
  <Translation x="[tibstringpar:CoolTubeSep]/2"    y="[zero]"  
               z="([tibstring3c:StringLoPlsL]-[CoolL])/2" />
 </PosPart>
 <PosPart copyNumber="1">
   <rParent name="tibstring3lr:TIBString3LoPls2"/>
   <rChild name="tibstring3lr:TIBString3LoPlsCoolW"/>
  <rRotation name="tibstringpar:90XD"/>
  <Translation x="[zero]"   y="[zero]"  z="-([CoolL]-
               ([tibstring3c:StringLoPlsL]-[tibstringpar:CoolTubeD])/2)" />
 </PosPart>
</PosPartSection>

<Algorithm name="track:DDTrackerZPosAlgo">
  <rParent name="tibstring3lr:TIBString3LoPls1"/>
  <String name="ChildName"    value="tibmodule2:TIBModule2"/>
  <Numeric name="StartCopyNo" value="4"/>
  <Numeric name="IncrCopyNo"  value="1" />
  <Vector name="ZPositions" type="numeric" nEntries="3">
  ([Det0Z]+[Shift]), ([Det1Z]+[Shift]), ([Det2Z]+[Shift]) </Vector>
  <Vector name="Rotations" type="string" nEntries="3">
  tibstringpar:180D, tibstringpar:180D, tibstringpar:180D</Vector>
</Algorithm>

<Algorithm name="track:DDTrackerZPosAlgo">
  <rParent name="tibstring3lr:TIBString3LoPls1"/>
  <String name="ChildName"    value="tibstringss:TIBICCBoxSS"/>
  <Numeric name="StartCopyNo" value="5"/>
  <Numeric name="IncrCopyNo"  value="1" />
  <Vector name="ZPositions" type="numeric" nEntries="3">
  ([ICC0Z]+[Shift]), ([ICC1Z]+[Shift]), ([ICC2Z]+[Shift]) </Vector>
  <Vector name="Rotations" type="string" nEntries="3">
  tibstringpar:NULL, tibstringpar:NULL, tibstringpar:NULL</Vector>
</Algorithm>
 
</DDDefinition>
