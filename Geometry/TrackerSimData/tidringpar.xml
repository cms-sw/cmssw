<?xml version="1.0"?>
<DDDefinition xmlns="http://www.cern.ch/cms/DDL" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.cern.ch/cms/DDL ../../DDLSchema/DDLSchema.xsd">

<ConstantsSection label="tidringpar.xml" eval="true">
 <Constant name="Rin"               value="22.80*cm"/>
 <Constant name="Rout"              value="51.20*cm"/>
 <Constant name="RingT"             value="3.00*cm"/>
 <Constant name="StructureT"        value="0.80*cm"/>
 <Constant name="ICBW"              value="2.40*cm"/>
 <Constant name="ICBT"              value="0.06*cm"/>
 <Constant name="ICBZ"              value="0.43*cm"/>
 <Constant name="ICCH"              value="3.00*cm"/>
 <Constant name="ICCW"              value="6.00*cm"/>
 <Constant name="ICCT"              value="0.15*cm"/>
 <Constant name="ICCZ"              value="0.535*cm"/>
 <Constant name="ICBTailH"          value="3.20*cm"/>
 <Constant name="ICBTailT"          value="0.06*cm"/>
 <Constant name="ICBTailTol"        value="0.05*cm"/>
 <Constant name="CoolW"             value="0.30*cm"/>
 <Constant name="CoolT"             value="0.30*cm"/>
 <Constant name="CoolZ"             value="0.61*cm"/>
 <Constant name="CoolInsertH"       value="1.50*cm"/>
 <Constant name="CoolInsertW"       value="0.80*cm"/>
 <Constant name="CoolInsertT"       value="0.38*cm"/>
 <Constant name="CoolInsertZ"       value="0.95*cm"/>
 <Constant name="CoolManifoldRin"   value="46.00*cm"/>
 <Constant name="CoolManifoldRout"  value="49.00*cm"/>
 <Constant name="CoolManifoldT"     value="0.70*cm"/>
 <Constant name="CoolManifoldW"     value="18.50*deg"/>
 <Constant name="ModuleZDS"         value="1.365*cm"/>
 <Constant name="ModuleZSS"         value="1.195*cm"/>
</ConstantsSection>

<SolidSection label="tidringpar.xml">
 <Tubs name="TIDRing"                 rMin="[Rin]" 
       rMax="[Rout]"                  dz="[RingT]/2" 
       startPhi="0*deg"               deltaPhi="360.*deg"/>
 <Tubs name="TIDStructure"            rMin="[Rin]" 
       rMax="[Rout]"                  dz="[StructureT]/2" 
       startPhi="0*deg"               deltaPhi="360.*deg"/>
 <Box name="TIDICC"                   dx="[ICCW]/2"
       dy="[ICCT]/2"                  dz="[ICCH]/2"/>
 <Box name="TIDCoolInsert"            dx="[CoolInsertH]/2"
       dy="[CoolInsertW]/2"           dz="[CoolInsertT]/2"/>
 <Tubs name="TIDCoolManifold"         rMin="[CoolManifoldRin]" 
       rMax="[CoolManifoldRout]"      dz="[CoolManifoldT]/2" 
       startPhi="-[CoolManifoldW]/2"  deltaPhi="[CoolManifoldW]"/>
</SolidSection>

<LogicalPartSection label="tidringpar.xml">
 <LogicalPart name="TIDCoolInsert" category="unspecified">
  <rSolid name="tidringpar:TIDCoolInsert"/>
  <rMaterial name="tidmaterial:TID_Cool_insert"/>
 </LogicalPart>
 <LogicalPart name="TIDCoolManifold" category="unspecified">
  <rSolid name="tidringpar:TIDCoolManifold"/>
  <rMaterial name="tidmaterial:TID_Cool_Manifold"/>
 </LogicalPart>
</LogicalPartSection>

</DDDefinition>
