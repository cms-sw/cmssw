<?xml version="1.0"?>
<DDDefinition xmlns="http://www.cern.ch/cms/DDL" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.cern.ch/cms/DDL ../../DDLSchema/DDLSchema.xsd">

<ConstantsSection label="tecring0.xml" eval="true">
 <Constant name="Rin"            value="23.08*cm"/>
 <Constant name="Rout"           value="36.65*cm"/>
 <Constant name="Rmin"           value="23.40*cm"/>
 <Constant name="NPhi"           value="24"/>
 <Constant name="RPos"           value="[Rmin]+
           ([tecmodule0:FullHeight]+[tecmodpar:TopFrameHeight])/2"/>
 <Constant name="BridgeR"        value="[Rmin]+[tecmodule0:FullHeight]/2"/>
 <Constant name="BridgeZ"        value="([tecpetpar:BridgeThick]-
           [tecmodule0:BridgeThick])/2"/>
</ConstantsSection>

<SolidSection label="tecring0.xml">
 <Tubs name="TECRing0"                rMin="[Rin]" 
       rMax="[Rout]"                  dz="[tecpetpar:ModuleThick]/2" 
       startPhi="-[tecpetpar:PetalContWidth]/2"
       deltaPhi="[tecpetpar:PetalContWidth]"/>
 <Tubs name="TECRing0Bridge"          rMin="[Rin]" 
       rMax="[Rout]"                  dz="[tecpetpar:BridgeThick]/2" 
       startPhi="-[tecpetpar:PetalContWidth]/2"
       deltaPhi="[tecpetpar:PetalContWidth]"/>
</SolidSection>

</DDDefinition>
