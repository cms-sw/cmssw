<?xml version="1.0" encoding="UTF-8"?>
<DDDefinition xmlns="http://www.cern.ch/cms/DDL" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.cern.ch/cms/DDL ../../../DetectorDescription/Schema/DDLSchema.xsd">

  <ConstantsSection label="CTPPS_Timing_Positive_Station.xml" eval="true">
    <!--Positions calculated from the wall closer to IP point-->
    <Constant name="CTPPS_Timing_Device_CTPPS_Timing_Hole_Diam" value="150*mm"/>
    <Constant name="CTPPS_Timing_Device_Beam_Hole_Diam" value="80*mm"/>
    <Constant name="CTPPS_Timing_Device_Wall_Thickness" value="2*mm"/>
    <Constant name="CTPPS_Timing_Device_Length_z" value="180*mm"/>
    <Constant name="CTPPS_Timing_Device_Length_y" value="112*mm"/>
    <Constant name="CTPPS_Timing_Device_Det_Bellow_Length" value="93.7*mm"/>
    <Constant name="CTPPS_Timing_Device_Envelope_Radius" value="450*mm"/>
    <Constant name="CTPPS_Timing_Station_Length" value="3360*mm"/>
    <Constant name="CTPPS_Timing_Station_Pipe_Length" value="1605*mm"/>
    <Constant name="CTPPS_Timing_Device_Hor_Closed_Wall_Thick_Ext" value="2*mm"/>
    <Constant name="CTPPS_Timing_Device_Hor_Closed_Wall_Thick_Int" value="2*mm"/>
    <Constant name="CTPPS_Timing_Device_Hor_CTPPS_Timing_Section_Tot_Length" value="[CTPPS_Timing_Device_Length_y]+[CTPPS_Timing_Device_Det_Bellow_Length]+[CTPPS_Timing_Device_Hor_Closed_Wall_Thick_Ext]"/>
    <Constant name="CTPPS_Timing_Positive_Hor_Vac_Length" value="[CTPPS_Timing_Device_Envelope_Radius]+[CTPPS_Timing_Device_Length_y]/2-[CTPPS_Timing_Device_Hor_Closed_Wall_Thick_Int]"/>
  </ConstantsSection>

  <SolidSection label="CTPPS_Timing_Positive_Station.xml">  
    <Tube rMin="0*mm" rMax="[CTPPS_Timing_Device_Envelope_Radius]*1.1" dz="[CTPPS_Timing_Station_Length]/2" name="CTPPS_Timing_Positive_Station"/>
    <Tube rMin="[CTPPS_Timing_Device_Beam_Hole_Diam]/2" rMax="[CTPPS_Timing_Device_Beam_Hole_Diam]/2+[CTPPS_Timing_Device_Wall_Thickness]" dz="[CTPPS_Timing_Station_Pipe_Length]/2" name="CTPPS_Timing_Positive_Station_Tube_1"/>
    <Tube rMin="[CTPPS_Timing_Device_Beam_Hole_Diam]/2" rMax="[CTPPS_Timing_Device_Beam_Hole_Diam]/2+[CTPPS_Timing_Device_Wall_Thickness]" dz="[CTPPS_Timing_Station_Pipe_Length]/2" name="CTPPS_Timing_Positive_Station_Tube_2"/>
    <Tube rMin="0*mm" rMax="[CTPPS_Timing_Device_Beam_Hole_Diam]/2" dz="[CTPPS_Timing_Station_Length]/2" name="CTPPS_Timing_Positive_Station_Vacuum_1"/>
    <Tube rMin="0*mm" rMax="[CTPPS_Timing_Device_CTPPS_Timing_Hole_Diam]/2" dz="[CTPPS_Timing_Positive_Hor_Vac_Length]/2" name="CTPPS_Timing_Positive_Station_Hor_Vacuum"/>
    <UnionSolid name="CTPPS_Timing_Positive_Station_Vacuum_4">
      <rSolid name="CTPPS_Timing_Positive_Station_Vacuum_1"/>
      <rSolid name="CTPPS_Timing_Positive_Station_Hor_Vacuum"/>
      <rRotation name="CTPPS_Diamond_Transformations:CTPPS_Diamond_y_90_rot"/>
      <Translation x="-(-[CTPPS_Timing_Positive_Hor_Vac_Length]/2+[CTPPS_Timing_Device_Length_y]/2-[CTPPS_Timing_Device_Hor_Closed_Wall_Thick_Int])" y="0*mm" z="0"/>
    </UnionSolid>
  </SolidSection>

  <LogicalPartSection label="CTPPS_Timing_Positive_Station.xml">
    <LogicalPart name="CTPPS_Timing_Positive_Station">
      <rSolid name="CTPPS_Timing_Positive_Station"/>
      <rMaterial name="CTPPS_Diamond_Materials:Air"/>
    </LogicalPart>
    <LogicalPart name="CTPPS_Timing_Positive_Station_Tube_1">
      <rSolid name="CTPPS_Timing_Positive_Station_Tube_1"/>
      <rMaterial name="CTPPS_Diamond_Materials:AISI-316L-Steel"/>
    </LogicalPart>
    <LogicalPart name="CTPPS_Timing_Positive_Station_Tube_2">
      <rSolid name="CTPPS_Timing_Positive_Station_Tube_2"/>
      <rMaterial name="CTPPS_Diamond_Materials:AISI-316L-Steel"/>
    </LogicalPart>
    <LogicalPart name="CTPPS_Timing_Positive_Station_Vacuum_4">
      <rSolid name="CTPPS_Timing_Positive_Station_Vacuum_4"/>
      <rMaterial name="CTPPS_Diamond_Materials:Vacuum"/>
    </LogicalPart>
  </LogicalPartSection>

  <PosPartSection label="CTPPS_Timing_Positive_Station.xml">
    <PosPart copyNumber="1">
      <rParent name="CTPPS_Timing_Positive_Station:CTPPS_Timing_Positive_Station_Vacuum_4"/>
      <rChild name="CTPPS_Timing_Horizontal_Pot:CTPPS_Timing_Cylinder_Primary_Vacuum"/>
      <rRotation name="CTPPS_Diamond_Transformations:CTPPS_Diamond_90_x_90_y_rot"/>
      <Translation x="[CTPPS_Timing_Horizontal_Pot:height]/2+[CTPPS_Timing_Horizontal_Pot:Cylinder_beam_distance]" y="0*m " z="0*m " />
    </PosPart>
    <PosPart copyNumber="1">
      <rParent name="CTPPS_Timing_Positive_Station:CTPPS_Timing_Positive_Station"/>
      <rChild name="CTPPS_Timing_Positive_Station_Tube_1"/>
      <Translation x="0*mm" y="0*mm" z="-[CTPPS_Timing_Station_Length]/2+[CTPPS_Timing_Station_Pipe_Length]/2"/>
    </PosPart>
    <PosPart copyNumber="1">
      <rParent name="CTPPS_Timing_Positive_Station:CTPPS_Timing_Positive_Station"/>
      <rChild name="CTPPS_Timing_Positive_Station_Tube_2"/>
      <Translation x="0*mm" y="0*mm" z="[CTPPS_Timing_Station_Length]/2-[CTPPS_Timing_Station_Pipe_Length]/2"/>
    </PosPart>
    <PosPart copyNumber="1">
      <rParent name="CTPPS_Timing_Positive_Station:CTPPS_Timing_Positive_Station"/>
      <rChild name="CTPPS_Timing_Positive_Station_Vacuum_4"/>
    </PosPart>
  </PosPartSection>

</DDDefinition>
