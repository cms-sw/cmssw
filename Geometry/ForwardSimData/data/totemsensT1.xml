<?xml version="1.0"?>
<DDDefinition xmlns="http://www.cern.ch/cms/DDL" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.cern.ch/cms/DDL ../../../DetectorDescription/Schema/DDLSchema.xsd">
	<SpecParSection label="totemsensT1.xml">
		<SpecPar name="ROUHitsTotemT1">
			<PartSelector path="//Internal_CSC.*"/>
			<Parameter name="SensitiveDetector" value="TotemSensitiveDetector" eval="false"/>
			<Parameter name="ReadOutName" value="TotemHitsT1" eval="false"/>
		</SpecPar>
	</SpecParSection>
	<SpecParSection label="TotemT1ProdCuts.xml" eval="true">
		<SpecPar name="TotemT1AllPart">
			<PartSelector path="//TotemT1"/>
			<Parameter name="CMSCutsRegion" value="TotemT1Region" eval="false"/>
			<Parameter name="ProdCutsForElectrons" value="1*mm"/>
			<Parameter name="ProdCutsForPositrons" value="1*mm"/>
			<Parameter name="ProdCutsForGamma" value="1*mm"/>
		</SpecPar>
		<SpecPar name="TotemT1SensitivePart">
			<PartSelector path="//Internal_CSC.*"/>
			<Parameter name="CMSCutsRegion" value="TotemT1SensitiveRegion" eval="false"/>
			<Parameter name="ProdCutsForElectrons" value="1*mm"/>
			<Parameter name="ProdCutsForPositrons" value="1*mm"/>
			<Parameter name="ProdCutsForGamma" value="1*mm"/>
		</SpecPar>
	</SpecParSection>
</DDDefinition>
