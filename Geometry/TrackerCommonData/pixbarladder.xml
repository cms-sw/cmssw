<?xml version="1.0"?>
<DDDefinition xmlns="http://www.cern.ch/cms/DDL" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.cern.ch/cms/DDL ../../DDLSchema/DDLSchema.xsd">

<ConstantsSection label="pixbarladder.xml" eval="true">
 <Constant name="Length"            value="53.36*cm"/>
 <Constant name="Modules"           value="8"/>
 <Constant name="BaseThick"         value="0.30*mm"/>
 <Constant name="ROChipThick"       value="0.18*mm"/>
 <Constant name="SensorThick"       value="0.30*mm"/>
 <Constant name="SensorDz"          value="6.63*cm"/>
 <Constant name="SensorEdge"        value="1.20*mm"/>
 <Constant name="ActiveDz"          value="6.45*cm"/>
 <Constant name="HybridThick"       value="0.10*mm"/>
 <Constant name="HybridDz"          value="6.40*cm"/>
 <Constant name="CableThick"        value="0.06*mm"/>
 <Constant name="Cable1Dz"          value="20.00*cm"/>
 <Constant name="Cable2Dz"          value="13.34*cm"/>
 <Constant name="Cable3Dz"          value="6.68*cm"/>
 <Constant name="CableBoxThick"     value="0.18*mm"/>
 <Constant name="ModuleThick"       value="([BaseThick]+[ROChipThick]+
           [SensorThick]+[HybridThick])"/>
 <Constant name="ModuleDz"          value="[Length]/[Modules]"/>
 <Constant name="ModuleZ"           value="-([Length]-[ModuleDz])/2"/>
 <Constant name="Cable1Y"           value="([CableBoxThick]-[CableThick])/2"/>
 <Constant name="Cable1Z"           value="([Length]-[Cable1Dz])/2"/>
 <Constant name="Cable2Y"           value="[Cable1Y]-[CableThick]"/>
 <Constant name="Cable2Z"           value="([Length]-[Cable2Dz])/2"/>
 <Constant name="Cable3Y"           value="[Cable2Y]-[CableThick]"/>
 <Constant name="Cable3Z"           value="([Length]-[Cable3Dz])/2"/>
</ConstantsSection>

<RotationSection label="pixbarladder.xml">
  <Rotation name="Z2XY" thetaX="90*deg" phiX="0*deg"     thetaY="180*deg" 
                        phiY="0*deg"    thetaZ="90*deg"  phiZ="90*deg" />
</RotationSection>

</DDDefinition>
