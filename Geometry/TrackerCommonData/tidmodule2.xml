<?xml version="1.0"?>
<DDDefinition xmlns="http://www.cern.ch/cms/DDL" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.cern.ch/cms/DDL ../../DetectorDescription/Schema/DDLSchema.xsd">

<ConstantsSection label="tidmodule2.xml" eval="true">
 <Constant name="FullHeight"       value="11.280*cm"/>
 <Constant name="DlTop"            value="8.320*cm"/>
 <Constant name="DlBottom"         value="6.500*cm"/>
 <Constant name="DlHybrid"         value="5.887*cm"/>
 <Constant name="ActiveHeight"     value="11.060*cm"/>
</ConstantsSection>

<Algorithm name="track:DDTIDModuleAlgo">
  <rParent name="tidmodule2:TIDModule2"/>
  <String name="GeneralMaterial"    value="materials:Air"/>
  <Numeric name="DetectorNumber"    value="1"/>
  <Numeric name="ModuleThick"       value="[tidmodpar:ModuleThickSS]"/>
  <Numeric name="DetTilt"           value="[tidmodpar:DetTilt]"/>
  <Numeric name="FullHeight"        value="[tidmodule2:FullHeight]"/>
  <Numeric name="DlTop"             value="[tidmodule2:DlTop]"/>
  <Numeric name="DlBottom"          value="[tidmodule2:DlBottom]"/>
  <Numeric name="DlHybrid"          value="[tidmodule2:DlHybrid]"/>
  <String name="TopFrameName"       value="tidmodule2:TIDModule2TopFrame"/>
  <String name="TopFrameMaterial"   value="tidmaterial:TID_frame_top"/>
  <Numeric name="TopFrameHeight"    value="[tidmodpar:TopFrameHeight]"/>
  <Numeric name="TopFrameWidth"     value="[tidmodpar:TopFrameWidth]"/>
  <Numeric name="TopFrameThick"     value="[tidmodpar:TopFrameThick]"/>
  <Numeric name="BottomFrameHeight" value="[tidmodpar:BottomFrameHeight]"/>
  <Numeric name="BottomFrameOver"   value="[tidmodpar:BottomFrameOver]"/>
  <String name="SideFrameName"      value="tidmodule2:TIDModule2SideFrame"/>
  <String name="SideFrameMaterial"  value="tidmaterial:TID_frame_side"/>
  <Numeric name="SideFrameWidth"    value="[tidmodpar:SideFrameWidth]"/>
  <Numeric name="SideFrameThick"    value="[tidmodpar:SideFrameThick]"/>
  <Numeric name="SideFrameOver"     value="[tidmodpar:SideFrameOver]"/>
  <String name="DummyFrameName"     value="tidmodule2:TIDModule2Frame"/>
  <Vector name="WaferName"     type="string" nEntries="1">
    tidmodule2:TIDModule2RphiWafer</Vector>
  <String name="WaferMaterial"      value="materials:Silicon"/>
  <Numeric name="SideWidth"         value="[tidmodpar:SideWidth]"/>
  <Vector name="ActiveName"    type="string" nEntries="1">
    tidmodule2:TIDModule2RphiActive</Vector>
  <String name="ActiveMaterial"     value="materials:Silicon"/>
  <Numeric name="ActiveHeight"      value="[tidmodule2:ActiveHeight]"/>
  <Vector name="ActiveThick"   type="numeric" nEntries="1">
    [tidmodpar:ActiveThick] </Vector>
  <String name="ActiveRotation"     value="tidmodpar:90ZD"/>
  <String name="HybridName"         value="tidmodule2:TIDModule2Hybrid"/>
  <String name="HybridMaterial"     value="tidmaterial:TID_ele3"/>
  <Numeric name="HybridHeight"      value="[tidmodpar:HybridHeight]"/>
  <Numeric name="HybridWidth"       value="[tidmodpar:HybridWidth]"/>
  <Numeric name="HybridThick"       value="[tidmodpar:HybridThick]"/>
  <Vector name="PitchName"     type="string" nEntries="1">
    tidmodule2:TIDModule2RphiPA</Vector>
  <String name="PitchMaterial"      value="tidmaterial:TID_PitchAdapter"/>
  <Numeric name="PitchHeight"       value="[tidmodpar:PitchHeight]"/>
  <Numeric name="PitchThick"        value="[tidmodpar:PitchThick]"/>
</Algorithm>
 
<LogicalPartSection label="tidmodule2.xml">
 <LogicalPart name="TIDModule2" category="unspecified">
  <rSolid name="tidmodule2:TIDModule2"/>
  <rMaterial name="materials:Air"/>
 </LogicalPart>
</LogicalPartSection>

<Algorithm name="track:DDTIDModulePosAlgo">
  <rParent name="tidmodule2:TIDModule2"/>
  <Numeric name="DetectorNumber"    value="1"/>
  <Numeric name="ModuleThick"       value="[tidmodpar:ModuleThickSS]"/>
  <Numeric name="DetTilt"           value="[tidmodpar:DetTilt]"/>
  <Numeric name="FullHeight"        value="[tidmodule2:FullHeight]"/>
  <Numeric name="DlTop"             value="[tidmodule2:DlTop]"/>
  <Numeric name="DlBottom"          value="[tidmodule2:DlBottom]"/>
  <Numeric name="DlHybrid"          value="[tidmodule2:DlHybrid]"/>
  <String name="TopFrameName"       value="tidmodule2:TIDModule2TopFrame"/>
  <Numeric name="TopFrameHeight"    value="[tidmodpar:TopFrameHeight]"/>
  <Vector name="TopFrameZ"     type="numeric" nEntries="1">
    [tidmodpar:TopFrameZSS] </Vector>
  <Numeric name="BottomFrameHeight" value="[tidmodpar:BottomFrameHeight]"/>
  <Numeric name="BottomFrameOver"   value="[tidmodpar:BottomFrameOver]"/>
  <String name="SideFrameName"      value="tidmodule2:TIDModule2SideFrame"/>
  <Vector name="SideFrameZ"    type="numeric" nEntries="1">
    [tidmodpar:SideFrameZSS] </Vector>
  <Vector name="WaferName"     type="string" nEntries="1">
    tidmodule2:TIDModule2RphiWafer</Vector>
  <Vector name="WaferZ"        type="numeric" nEntries="1">
    [tidmodpar:ActiveZSS] </Vector>
  <Vector name="WaferRotation" type="string" nEntries="1">
    tidmodpar:R180</Vector>
  <String name="HybridName"         value="tidmodule2:TIDModule2Hybrid"/>
  <Numeric name="HybridHeight"      value="[tidmodpar:HybridHeight]"/>
  <Vector name="HybridZ"       type="numeric" nEntries="1">
     [tidmodpar:HybridZSS] </Vector>
  <Vector name="PitchName"     type="string" nEntries="1">
    tidmodule2:TIDModule2RphiPA</Vector>
  <Numeric name="PitchHeight"       value="[tidmodpar:PitchHeight]"/>
  <Vector name="PitchZ"        type="numeric" nEntries="1">
     [tidmodpar:PitchZSS] </Vector>
  <Vector name="PitchRotation" type="string" nEntries="1">
    tidmodpar:NULL</Vector>
</Algorithm>
 
</DDDefinition>
