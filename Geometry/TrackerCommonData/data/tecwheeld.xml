	</Algorithm>
	<Algorithm name="track:DDTrackerAngular">
		<rParent name="tecwheeld:TECWheelD"/>
		<String name="ChildName" value="tecwheeld:TECOptConnectorD"/>
		<Numeric name="N" value="[tecwheel:OptConnN]"/>
