 <Constant name="FixServW"       value="5.00*deg"/>
 <Constant name="FixServT"       value="1.600*cm"/>
 <Constant name="FixServN"       value="8"/>
 <Constant name="FixServFi"      value="11.25*deg"/>
 <Constant name="PetalConnRmin"  value="108.50*cm"/>
 <Constant name="PetalConnRmax"  value="109.25*cm"/>
 <Constant name="PetalConnW"     value="10.00*deg"/>
 <Constant name="PetalConnT"     value="0.4*cm"/>
 <Constant name="OptConnRmin"    value="95.65*cm"/>
 <Constant name="OptConnRmax"    value="107.60*cm"/>
