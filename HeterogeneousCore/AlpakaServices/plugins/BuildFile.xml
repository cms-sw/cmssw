<!-- alpaka-based portable plugins -->
<library file="alpaka/*.cc" name="HeterogeneousCoreAlpakaServicesPlugins">
  <use name="alpaka"/>
  <use name="FWCore/MessageLogger"/>
  <use name="FWCore/ParameterSet"/>
  <use name="FWCore/PluginManager"/>
  <use name="FWCore/ServiceRegistry"/>
  <use name="HeterogeneousCore/AlpakaInterface"/>
  <!--
  The dependency on "HeterogeneousCore/AlpakaServices" should automatically expand to include
  the host-only library (if it exists) and corresponding Alpaka libraries (if they exist)
  -->
  <!-- <use name="HeterogeneousCore/AlpakaServices"/> -->
  <use name="HeterogeneousCore/AlpakaServices/alpaka/cuda" for="alpaka/cuda"/>
  <use name="HeterogeneousCore/AlpakaServices/alpaka/serial" for="alpaka/serial"/>
  <flags EDM_PLUGIN="1"/>
  <flags ALPAKA_BACKENDS="1"/>
</library>
