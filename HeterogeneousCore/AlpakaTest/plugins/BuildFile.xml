<!-- host-only plugins -->
<library file="*.cc" name="HeterogeneousCoreAlpakaTestPlugins">
  <use name="alpaka"/>
  <use name="DataFormats/PortableTestObjects"/>
  <use name="FWCore/Framework"/>
  <use name="FWCore/MessageLogger"/>
  <use name="FWCore/ParameterSet"/>
  <use name="FWCore/Utilities"/>
  <use name="HeterogeneousCore/AlpakaCore"/>
  <use name="HeterogeneousCore/AlpakaInterface"/>
  <flags EDM_PLUGIN="1"/>
</library>

<!-- alpaka-based portable plugins -->
<library file="alpaka/*.cc" name="HeterogeneousCoreAlpakaTestPluginsPortable">
  <use name="alpaka"/>
  <!--
  The dependency on "DataFormats/PortableTestObjects" should automatically expand to include
  the host-only library (if it exists) and corresponding Alpaka libraries (if they exist)
  -->
  <use name="DataFormats/PortableTestObjects"/>
  <use name="DataFormats/PortableTestObjects/alpaka/cuda" for="alpaka/cuda"/>
  <use name="DataFormats/PortableTestObjects/alpaka/serial" for="alpaka/serial"/>
  <use name="FWCore/Framework"/>
  <use name="FWCore/ParameterSet"/>
  <use name="FWCore/Utilities"/>
  <use name="HeterogeneousCore/AlpakaCore"/>
  <use name="HeterogeneousCore/AlpakaInterface"/>
  <flags ALPAKA_BACKENDS="1"/>
  <flags EDM_PLUGIN="1"/>
</library>
