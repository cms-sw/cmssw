// ------------ method called for each event  ------------
void
L1TcCalib::analyze(const edm::Event& iEvent, const edm::EventSetup& iSetup)
{
    using namespace std;
    using namespace edm;
    using namespace reco;
    using namespace HGCalTriggerBackend;
    using namespace l1t;

    init();
    
    std::cout << "Event " << iEvent.id() << std::endl;
    
    Handle< edm::SortedCollection< l1t::HGCFETriggerDigi,edm::StrictWeakOrdering< l1t::HGCFETriggerDigi > > > trgCell;
    //trgCell = Handle< edm::SortedCollection< l1t::HGCFETriggerDigi,edm::StrictWeakOrdering< l1t::HGCFETriggerDigi > > >() ;
    iEvent.getByLabel(TCells_tag_, trgCell);
    
    std::cout << " trigger cell size =  "<< trgCell->size() << std::endl;

    for( size_t i=0; i<trgCell->size(); ++i){

        HGCalDetId module_id( (*trgCell)[i].id());
        HGCalTriggerCellBestChoiceCodec::data_type data;
        std::cout << "  -- HGCalDetId " << module_id << std::endl;
        
        data.reset();
        // unsigned char tmp = codec_;
        //std::cout << "id  " <<  << std::endl;        

        (*trgCell)[i].decode(codec_, data);
        for(const auto& triggercell : data.payload)
        {
            if(triggercell.hwPt()>0)
            {
                HGCalDetId detid(triggercell.detId());
                std::cout << " ---- pt " << triggercell.hwPt() << std::endl;
                //        triggercell.p4(),
                //        triggercell.hwPt(), 0, 0);
            }
        }
    }
    

    
    mytree_->Fill();


#ifdef THIS_IS_AN_EVENT_EXAMPLE
    Handle<ExampleData> pIn;
    iEvent.getByLabel("example",pIn);
#endif
   
#ifdef THIS_IS_AN_EVENTSETUP_EXAMPLE
    ESHandle<SetupData> pSetup;
    iSetup.get<SetupRecord>().get(pSetup);
#endif
}


