L1TcCalib::L1TcCalib(const edm::ParameterSet& iConfig) :
    debug_( iConfig.getParameter<bool>( "DebugCode" ) )
{

    TCells_tag_ = edm::InputTag("hgcalTriggerPrimitiveDigiProducer");

    consumes< edm::SortedCollection< l1t::HGCFETriggerDigi,edm::StrictWeakOrdering< l1t::HGCFETriggerDigi > > > (TCells_tag_);    

    //now do what ever initialization is needed
    //edm::Service<TFileService> fs;
    //demohisto = fs->make<TH1D>("genPart" , "genPart" , 200 , 0 , 2000 );
    mytree_  = fs_->make <TTree>("tree","tree"); 

    // Global
    mytree_->Branch("event",	&_nEvent,	"event/I");


}


